
@{
    ViewData["Title"] = "Historial Empleados";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 text-center justify-content-around">
        <a class="nav-link text-info font-weight-bold" asp-area="" asp-controller="Empleados" asp-action="Index">Mi perfil</a>
        <span>|</span>
        <a class="nav-link text-warning" asp-area="" asp-controller="Empleados" asp-action="EmpleadosList">Historial de conexiòn</a>
        <span>|</span>
        <a class="nav-link text-danger" asp-area="" asp-controller="Empleados" asp-action="CerrarSession">Cerrar sesiòn</a>
            
    </nav>
</header>



<div class="container">
    <a class="btn btn-success mb-4" asp-controller="Empleados" asp-action="Create">Registrar un nuevo empleado</a>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-hover text-center">
                <thead class="thead-dark">
                    <tr class="thead thead-dark">
                        <th class="border">Nombres</th >
                        <th class="border">Apellidos</th >
                        <th class="border">Correo</th >
                        <th class="border">Hora_Entrada</th >
                        <th class="border">Hora_Salida</th >
                        <th class="border">Estado</th >
                        <th class="border">Acción</th>
                    </tr>
                </thead>
            @foreach(var empleado in Model)
            {
                    <tr>
                        <td class="border">@empleado.Nombres</td>
                        <td class="border">@empleado.Apellidos</td>
                        <td class="border">@empleado.Correo</td>
                        <td class="border">@empleado.Hora_Entrada</td>
                        <td class="border">@empleado.Hora_Salida</td>
                        <td class="border">@empleado.Estado</td>
                        <td class="border">
                            <a class="btn btn-danger" asp-controller="Empleados" asp-action="EliminarEmpleado" asp-route-id="@empleado.Id">Eliminar</a>
                        </td>
                    </tr>
            }
            </table>
        </div>
    </div>
</div>