@model Empleado

@{
    ViewData["Title"] = "Logged";
}

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 text-center justify-content-around">
            <a class="nav-link text-info font-weight-bold" asp-area="" asp-controller="Empleados" asp-action="Index">Mi perfil</a>
            <span>|</span>
            <a class="nav-link text-warning" asp-area="" asp-controller="Empleados" asp-action="EmpleadosList">Historial de conexiòn</a>
            <span>|</span>
            <a class="nav-link text-danger" asp-area="" asp-controller="Empleados" asp-action="CerrarSession">Cerrar sesiòn</a>
                
        </nav>
    </header>


<div class="container">

    <div class="row">
        <a asp-controller="Empleados" asp-action="EmpleadosList" >Regresar</a>
        <div class="col-md-10 text-align-center border p-5">
            <form asp-action="Create" method="post">
                <h2 class="text-center"> <b>Registrar un nuevo empleado: </b></h2>
                <div class="form-group">
                    <label for="exampleInputEmail1">Nombres</label>
                    <input type="text" asp-for="Nombres"  class="form-control">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Apellidos</label>
                    <input type="text" asp-for="Apellidos" class="form-control">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Correo electronico</label>
                    <input type="email" asp-for="Correo" class="form-control">
                </div>

                <div class="form-group">
                    <label for="exampleInputPassword1">Contraseña</label>
                    <input type="password" asp-for="Contraseña" class="form-control">
                </div>

                <button class="btn btn-success">Registrar</button>
            </form>
        </div>
    </div>    
</div>

